<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.ecmdeveloper.plugin.contentEngine"
            name="Content Engine">
      </category>
      <view
            category="com.ecmdeveloper.plugin.contentEngine"
            class="com.ecmdeveloper.plugin.favorites.views.FavoritesView"
            icon="icons/star.png"
            id="com.ecmdeveloper.plugin.views.ObjectStoreFavorites"
            name="Object Store Favorites"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Add to Favorites"
            id="com.ecmdeveloper.plugin.addToFavorites"
            name="Add to Favorites">
      </command>
      <command
            description="Remove from Favorites"
            id="com.ecmdeveloper.plugin.removeFromFavorites"
            name="Remove from Favorites">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.ecmdeveloper.plugin.favorites.handlers.AddToFavoritesHandler"
            commandId="com.ecmdeveloper.plugin.addToFavorites">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <or>
                     <instanceof
                           value="com.ecmdeveloper.plugin.model.Folder">
                     </instanceof>
                     <instanceof
                           value="com.ecmdeveloper.plugin.model.Document">
                     </instanceof>
                     <instanceof
                           value="com.ecmdeveloper.plugin.model.CustomObject">
                     </instanceof>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.favorites.handlers.RemoveFromFavorites"
            commandId="com.ecmdeveloper.plugin.removeFromFavorites">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <or>
                     <instanceof
                           value="com.ecmdeveloper.plugin.model.Folder">
                     </instanceof>
                     <instanceof
                           value="com.ecmdeveloper.plugin.model.Document">
                     </instanceof>
                     <instanceof
                           value="com.ecmdeveloper.plugin.model.CustomObject">
                     </instanceof>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:com.ecmdeveloper.plugin.views.ObjectStoresView?after=additions">
         <command
               commandId="com.ecmdeveloper.plugin.addToFavorites"
               icon="icons/star.png"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false">
                     <or>
                        <instanceof
                              value="com.ecmdeveloper.plugin.model.Folder">
                        </instanceof>
                        <instanceof
                              value="com.ecmdeveloper.plugin.model.Document">
                        </instanceof>
                        <instanceof
                              value="com.ecmdeveloper.plugin.model.CustomObject">
                        </instanceof>
                     </or>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:com.ecmdeveloper.plugin.views.ObjectStoreFavorites?after=additions">
         <command
               commandId="com.ecmdeveloper.plugin.removeFromFavorites"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false">
                     <test
                           forcePluginActivation="true"
                           property="com.ecmdeveloper.plugin.favorites.isFavorite">
                     </test>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.ecmdeveloper.plugin.favorites.tester.FavoritesTester"
            id="com.ecmdeveloper.plugin.favorites.favoritesTester"
            namespace="com.ecmdeveloper.plugin.favorites"
            properties="isFavorite"
            type="java.lang.Object">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            class="com.ecmdeveloper.plugin.favorites.decorators.FavoriteDecorator"
            id="com.ecmdeveloper.plugin.decorators.favoriteDecorator"
            label="Favorite Decorator"
            lightweight="true"
            state="true">
         <enablement>
            <objectClass
                  name="com.ecmdeveloper.plugin.model.ObjectStoreItem">
            </objectClass>
         </enablement>
      </decorator>
   </extension>

</plugin>
