   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.ecmdeveloper.plugin.properties.handlers.EditObjectStoreItemHandler"
            commandId="com.ecmdeveloper.plugin.editObjectStoreItem">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <or>
                     <instanceof
                           value="com.ecmdeveloper.plugin.core.model.ICustomObject">
                     </instanceof>
                     <instanceof
                           value="com.ecmdeveloper.plugin.core.model.IDocument">
                     </instanceof>
                     <instanceof
                           value="com.ecmdeveloper.plugin.core.model.IFolder">
                     </instanceof></or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.properties.handlers.RefreshEditorPropertiesHandler"
            commandId="com.ecmdeveloper.plugin.refreshProperties">
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.properties.handlers.RefreshEditorPropertiesHandler"
            commandId="org.eclipse.ui.file.refresh">
         <activeWhen>
            <with
                  variable="activeEditorId">
               <or>
                  <equals
                        value="com.ecmdeveloper.plugin.editors.folderEditor">
                  </equals>
                  <equals
                        value="com.ecmdeveloper.plugin.editors.documentEditor">
                  </equals>
                  <equals
                        value="com.ecmdeveloper.plugin.editors.customObjectEditor">
                  </equals>
               </or>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.properties.handlers.SaveEditorPropertiesHandler"
            commandId="com.ecmdeveloper.plugin.saveProperties">
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.properties.handlers.EditDocumentVersionHandler"
            commandId="com.ecmdeveloper.plugin.editDocumentVersion">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <or>
                     <instanceof
                           value="com.ecmdeveloper.plugin.core.model.IDocument">
                     </instanceof>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.properties.handlers.NewFolderHandler"
            commandId="com.ecmdeveloper.plugin.newFolder">
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.properties.handlers.SaveNewEditorPropertiesHandler"
            commandId="com.ecmdeveloper.plugin.saveNewProperties">
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.properties.handlers.NewDocumentHandler"
            commandId="com.ecmdeveloper.plugin.newDocument">
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.properties.handlers.NewCustomObjectHandler"
            commandId="com.ecmdeveloper.plugin.newCustomObject">
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.properties.handlers.NewDocumentFromResourceHandler"
            commandId="com.ecmdeveloper.plugin.newDocumentFromResource">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="com.ecmdeveloper.plugin.category.main"
            class="com.ecmdeveloper.plugin.properties.wizard.NewFolderWizard"
            icon="icons/folder.png"
            id="com.ecmdeveloper.plugin.newFolder"
            name="Folder">
         <description>
            Create a new object store item
         </description>
      </wizard>
      <wizard
            category="com.ecmdeveloper.plugin.category.main"
            class="com.ecmdeveloper.plugin.properties.wizard.NewDocumentWizard"
            icon="icons/page_white.png"
            id="com.ecmdeveloper.plugin.newDocument"
            name="Document">
         <description>
            Create a new document
         </description>
      </wizard>
      <wizard
            category="com.ecmdeveloper.plugin.category.main"
            class="com.ecmdeveloper.plugin.properties.wizard.NewCustomObjectWizard"
            icon="icons/application_view_columns.png"
            id="com.ecmdeveloper.plugin.newCustomObject"
            name="Custom Object">
         <description>
            Create a new custom object
         </description>
      </wizard>
      <category
            id="com.ecmdeveloper.plugin.category.main"
            name="ECM Developer">
      </category>
   </extension>

</plugin>
