                        <instanceof
                              value="com.ecmdeveloper.plugin.core.model.IFolder">
                        </instanceof>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:com.ecmdeveloper.plugin.views.ObjectStoresView?after=additions">
         <menu
               label="New">
            <command
                  commandId="com.ecmdeveloper.plugin.newFolder"
                  icon="icons/folder.png"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <or>
                           <instanceof
                                 value="com.ecmdeveloper.plugin.core.model.IFolder">
                           </instanceof>
                           <and>
                              <instanceof
                                    value="com.ecmdeveloper.plugin.core.model.IObjectStore">
                              </instanceof>
                              <test
                                    property="com.ecmdeveloper.plugin.isConnected">
                              </test>
                           </and>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="com.ecmdeveloper.plugin.newDocument"
                  icon="icons/page_white.png"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <or>
                           <instanceof
                                 value="com.ecmdeveloper.plugin.core.model.IFolder">
                           </instanceof>
                           <and>
                              <instanceof
                                    value="com.ecmdeveloper.plugin.core.model.IObjectStore">
                              </instanceof>
                              <test
                                    property="com.ecmdeveloper.plugin.isConnected">
                              </test>
                           </and>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="com.ecmdeveloper.plugin.newCustomObject"
                  icon="icons/application_view_columns.png"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <or>
                           <instanceof
                                 value="com.ecmdeveloper.plugin.core.model.IFolder">
                           </instanceof>
                           <and>
                              <instanceof
                                    value="com.ecmdeveloper.plugin.core.model.IObjectStore">
                              </instanceof>
                              <test
                                    property="com.ecmdeveloper.plugin.isConnected">
                              </test>
                           </and>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.search.ui.views.SearchView?after=additions">
         <command
               commandId="com.ecmdeveloper.plugin.editObjectStoreItem"
               icon="icons/pencil.png"
               label="Edit..."
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false">
                     <or>
                        <instanceof
                              value="com.ecmdeveloper.plugin.core.model.IFolder">
                        </instanceof>
                        <instanceof
                              value="com.ecmdeveloper.plugin.core.model.IDocument">
                        </instanceof>
                        <instanceof
                              value="com.ecmdeveloper.plugin.core.model.ICustomObject">
                        </instanceof>
                     </or>
