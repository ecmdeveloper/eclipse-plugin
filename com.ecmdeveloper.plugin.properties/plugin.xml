      </command>
      <command
            id="com.ecmdeveloper.plugin.saveProperties"
            name="Save Properties">
      </command>
      <command
            categoryId="com.ecmdeveloper.plugin.category"
            description="Edit Document Version"
            id="com.ecmdeveloper.plugin.editDocumentVersion"
            name="Edit Version...">
      </command>
      <command
            description="New Folder"
            id="com.ecmdeveloper.plugin.newFolder"
            name="Folder">
      </command>
      <command
            description="New Document"
            id="com.ecmdeveloper.plugin.newDocument"
            name="Document">
      </command>
      <command
            description="New Custom Object"
            id="com.ecmdeveloper.plugin.newCustomObject"
            name="Custom Object">
      </command>
      <command
            id="com.ecmdeveloper.plugin.saveNewProperties"
            name="Save New Properties">
      </command>
      <command
            description="New Document from Resource"
            id="com.ecmdeveloper.plugin.newDocumentFromResource"
            name="Add to Object Store">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:com.ecmdeveloper.plugin.views.ObjectStoresView?after=edit">
         <command
               commandId="com.ecmdeveloper.plugin.editObjectStoreItem"
               icon="icons/pencil.png"
               label="Edit..."
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false">
                     <or>
                        <instanceof
                              value="com.ecmdeveloper.plugin.core.model.IFolder">
                        </instanceof>
                        <instanceof
                              value="com.ecmdeveloper.plugin.core.model.IDocument">
                        </instanceof>
                        <instanceof
                              value="com.ecmdeveloper.plugin.core.model.ICustomObject">
                        </instanceof>
                     </or>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="com.ecmdeveloper.plugin.editDocumentVersion"
               icon="icons/versions_edit.png"
               label="Edit Document Version..."
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate
                           ifEmpty="false">
                        <or>
                           <and>
                              <instanceof
                                    value="com.ecmdeveloper.plugin.core.model.IDocument">
                              </instanceof>
                              <test
                                    property="com.ecmdeveloper.plugin.canCheckout">
                              </test>
                           </and>
                        </or>
                     </iterate></and>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="contentEngine"
               label="Object Store">
            <command
                  commandId="com.ecmdeveloper.plugin.newDocumentFromResource"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <instanceof
                              value="org.eclipse.core.resources.IFile">
                        </instanceof>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:com.ecmdeveloper.plugin.views.ObjectStoreFavorites?after=edit">
