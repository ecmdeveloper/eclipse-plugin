<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.ecmdeveloper.plugin.security.editor.SecurityEditor"
            default="false"
            icon="icons/group_edit.png"
            id="com.ecmdeveloper.plugin.security.securityEditor"
            name="Security Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Edit Security"
            id="com.ecmdeveloper.plugin.security.editSecurity"
            name="Edit Security">
      </command>
      <command
            id="com.ecmdeveloper.plugin.security.editor.toolbar"
            name="Actions">
      </command>
      <command
            id="com.ecmdeveloper.plugin.security.showMemberships"
            name="Show Memberships">
      </command>
      <command
            description="Edit Version Security"
            id="com.ecmdeveloper.plugin.security.editVersionSecurity"
            name="Edit Verion Security">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.ecmdeveloper.plugin.security.handlers.EditSecurityHandler"
            commandId="com.ecmdeveloper.plugin.security.editSecurity">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <or>
                     <instanceof
                           value="com.ecmdeveloper.plugin.core.model.IFolder">
                     </instanceof>
                     <instanceof
                           value="com.ecmdeveloper.plugin.core.model.ICustomObject">
                     </instanceof>
                     <instanceof
                           value="com.ecmdeveloper.plugin.core.model.IDocument">
                     </instanceof>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.security.handlers.HelloHandler"
            commandId="com.ecmdeveloper.plugin.security.editor.toolbar">
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.security.handlers.ShowMembershipsHandler"
            commandId="com.ecmdeveloper.plugin.security.showMemberships">
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.security.handlers.EditVersionSecurityHandler"
            commandId="com.ecmdeveloper.plugin.security.editVersionSecurity">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:com.ecmdeveloper.plugin.views.ObjectStoresView?after=edit">
         <menu
               icon="icons/pencil.png"
               id="com.ecmdeveloper.plugin.views.ObjectStoresView.edit"
               label="Edit">
            <command
                  commandId="com.ecmdeveloper.plugin.security.editSecurity"
                  icon="icons/group_edit.png"
                  label="Security..."
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <or>
                           <instanceof
                                 value="com.ecmdeveloper.plugin.core.model.IFolder">
                           </instanceof>
                           <instanceof
                                 value="com.ecmdeveloper.plugin.core.model.IDocument">
                           </instanceof>
                           <instanceof
                                 value="com.ecmdeveloper.plugin.core.model.ICustomObject">
                           </instanceof>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
         <menu
               icon="icons/versions_edit.png"
               id="com.ecmdeveloper.plugin.views.ObjectStoresView.editVersion"
               label="Edit Document Version">
            <command
                  commandId="com.ecmdeveloper.plugin.security.editVersionSecurity"
                  icon="icons/group_edit.png"
                  label="Security..."
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate
                              ifEmpty="false">
                           <or>
                              <and>
                                 <instanceof
                                       value="com.ecmdeveloper.plugin.core.model.IDocument">
                                 </instanceof>
                                 <test
                                       property="com.ecmdeveloper.plugin.canCheckout">
                                 </test>
                              </and>
                           </or>
                        </iterate>
                     </and>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
