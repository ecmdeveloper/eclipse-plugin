<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Content Engine"
            id="com.ecmdeveloper.plugin.contentEngine">
      </category>
      <view
            name="Object Stores"
            icon="icons/sample.gif"
            category="com.ecmdeveloper.plugin.contentEngine"
            class="com.ecmdeveloper.plugin.views.ObjectStoresView"
            id="com.ecmdeveloper.plugin.views.ObjectStoresView">
      </view>
      <view
            category="com.ecmdeveloper.plugin.contentEngine"
            class="com.ecmdeveloper.plugin.views.CodeModulesView"
            icon="icons/sample.gif"
            id="com.ecmdeveloper.plugin.views.codeModulesView"
            name="Code Modules"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <wizard
            category="com.ecmdeveloper.plugin.category.contentEngine"
            class="com.ecmdeveloper.plugin.wizard.ImportObjectStoreWizard"
            icon="src/com/ecmdeveloper/plugin/resources/objectstore.gif"
            id="com.ecmdeveloper.plugin.wizard.importObjectStore"
            name="Object Store">
      </wizard>
      <category
            id="com.ecmdeveloper.plugin.category.contentEngine"
            name="Content Engine">
      </category>
      <wizard
            category="com.ecmdeveloper.plugin.category.contentEngine"
            class="com.ecmdeveloper.plugin.wizard.ImportCodeModuleWizard"
            icon="icons\sample.gif"
            id="com.ecmdeveloper.plugin.wizard.importCodeModule"
            name="Code Module">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Commands related to the Content Engine"
            id="com.ecmdeveloper.plugin.category"
            name="Content Engine Commands">
      </category>
      <command
            categoryId="com.ecmdeveloper.plugin.category"
            description="Connect to the Object Store"
            id="com.ecmdeveloper.plugin.connectObjectStore"
            name="Connect">
      </command>
      <command
            categoryId="com.ecmdeveloper.plugin.category"
            description="Removes this Object Store from the view"
            id="com.ecmdeveloper.plugin.removeObjectStore"
            name="Remove from view">
      </command>
      <command
            categoryId="com.ecmdeveloper.plugin.category"
            description="Removes this Code Module from this view"
            id="com.ecmdeveloper.plugin.removeCodeModule"
            name="Remove from view">
      </command>
      <command
            categoryId="com.ecmdeveloper.plugin.category"
            description="Import a Code Module"
            id="com.ecmdeveloper.plugin.importCodeModule"
            name="Import">
      </command>
      <command
            categoryId="com.ecmdeveloper.plugin.category"
            description="Edit this Code Module"
            id="com.ecmdeveloper.plugin.editCodeModule"
            name="Edit">
      </command>
      <command
            categoryId="com.ecmdeveloper.plugin.category"
            description="Updates the Code Module on the Content Engine"
            id="com.ecmdeveloper.plugin.updateCodeModule"
            name="Update">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:com.ecmdeveloper.plugin.views.ObjectStoresView?after=additions">
         <command
               commandId="com.ecmdeveloper.plugin.connectObjectStore"
               icon="src/com/ecmdeveloper/plugin/resources/connect.gif"
               label="Connect"
               style="push"
               tooltip="Connect to the Object Store">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <instanceof
                           value="com.ecmdeveloper.plugin.model.ObjectStore">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:com.ecmdeveloper.plugin.views.ObjectStoresView?after=edit">
         <command
               commandId="com.ecmdeveloper.plugin.removeObjectStore"
               icon="src/com/ecmdeveloper/plugin/resources/remove_from_view.gif"
               label="Remove from view"
               style="push"
               tooltip="Removes this Object Store from the view">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <instanceof
                           value="com.ecmdeveloper.plugin.model.ObjectStore">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:com.ecmdeveloper.plugin.views.ObjectStoresView?after=edit">
         <command
               commandId="com.ecmdeveloper.plugin.connectObjectStore"
               icon="src/com/ecmdeveloper/plugin/resources/connect.gif"
               label="Connect"
               style="push"
               tooltip="Connect to the Object Store">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <instanceof
                           value="com.ecmdeveloper.plugin.model.ObjectStore">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:com.ecmdeveloper.plugin.views.codeModulesView?after=additions">
         <command
               commandId="com.ecmdeveloper.plugin.removeObjectStore"
               icon="icons/delete_edit.gif"
               label="Remove from view"
               style="push"
               tooltip="Remove this Object Store from this view">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:com.ecmdeveloper.plugin.views.codeModulesView?after=additions">
         <command
               commandId="com.ecmdeveloper.plugin.importCodeModule"
               icon="icons/delete_edit.gif"
               label="Import"
               style="push"
               tooltip="Import a Code Module">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:com.ecmdeveloper.plugin.views.codeModulesView?after=edit">
         <command
               commandId="com.ecmdeveloper.plugin.removeCodeModule"
               icon="icons/delete_edit.gif"
               label="Remove from view"
               style="push"
               tooltip="Remove this Code Module from this view">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:com.ecmdeveloper.plugin.views.codeModulesView?after=edit">
         <command
               commandId="com.ecmdeveloper.plugin.editCodeModule"
               label="Edit..."
               style="push"
               tooltip="Edit this Code Module">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:com.ecmdeveloper.plugin.views.codeModulesView?after=edit">
         <command
               commandId="com.ecmdeveloper.plugin.updateCodeModule"
               label="Update"
               style="push"
               tooltip="Updates the Code Module on the Content Engine">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.ecmdeveloper.plugin.handlers.ConnectObjectStoreHandler"
            commandId="com.ecmdeveloper.plugin.connectObjectStore">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate>
                  <test
                        property="com.ecmdeveloper.plugin.notConnected">
                  </test></iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.handlers.RemoveObjectStoreHandler"
            commandId="com.ecmdeveloper.plugin.removeObjectStore">
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.handlers.RemoveCodeModuleHandler"
            commandId="com.ecmdeveloper.plugin.removeCodeModule">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="com.ecmdeveloper.plugin.model.CodeModuleFile">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.handlers.ImportCodeModuleHandler"
            commandId="com.ecmdeveloper.plugin.importCodeModule">
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.handlers.EditCodeModuleHandler"
            commandId="com.ecmdeveloper.plugin.editCodeModule">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="com.ecmdeveloper.plugin.model.CodeModuleFile">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.ecmdeveloper.plugin.handlers.UpdateCodeModuleHandler"
            commandId="com.ecmdeveloper.plugin.updateCodeModule">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="com.ecmdeveloper.plugin.model.CodeModuleFile">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.ecmdeveloper.plugin.tester.PropertyTester"
            id="com.ecmdeveloper.plugin.propertyTester"
            namespace="com.ecmdeveloper.plugin"
            properties="isConnected,notConnected"
            type="java.lang.Object">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="com.ecmdeveloper.plugin.properties.ObjectStoreItemPropertyPage"
            id="com.ecmdeveloper.plugin.objectStoreItemPropertyPage"
            name="Object Store Item Property">
         <enabledWhen>
            <instanceof
                  value="com.ecmdeveloper.plugin.model.IObjectStoreItem">
            </instanceof>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.ecmdeveloper.plugin.editors.CodeModuleEditor"
            contributorClass="com.ecmdeveloper.plugin.editors.CodeModuleEditorContributor"
            default="false"
            extensions="codemodule"
            icon="icons/sample.gif"
            id="com.ecmdeveloper.plugin.editors.codeModuleEditor"
            name="Code Module Editor">
      </editor>
   </extension>

</plugin>
